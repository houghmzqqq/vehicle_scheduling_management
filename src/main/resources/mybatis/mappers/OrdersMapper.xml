    <select id="queryById" resultType="OrdersPO"
            parameterType="java.lang.Integer">
        select
        *
        from orders
        where id = #{id}
    </select>
    
    <select id="queryByFilter" resultType="OrdersPO">
        select * from orders
    </select>

    <select id="queryByTypes" resultType="OrdersPO">
        select * from orders where status=1 and types=#{types}
