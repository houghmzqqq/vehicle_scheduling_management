    <insert id="add" parameterType="OrdersPO" useGeneratedKeys="true" keyProperty="id">
        insert into orders(company,goodsName,name,weight,volume,province,city,
        detailedAddress,createDate,status,types,isToBring)
        values(#{company},#{goodsName},#{name},#{weight},#{volume},#{province},
        #{city},#{detailedAddress},#{createDate},#{status},#{types},#{isToBring})
    </insert>
    
    <update id="update" parameterType="OrdersPO">
        update orders set company=#{company},goodsName=#{goodsName},name=#{name},
        weight=#{weight},volume=#{volume},province=#{province},city=#{city},
        detailedAddress=#{detailedAddress},createDate=#{createDate},status=#{status},
        types=#{types},isToBring=#{isToBring}
        where id=#{id}
    </update>
    
    <delete id="delete" parameterType="int">
        delete from orders where id=#{id}
    </delete>
