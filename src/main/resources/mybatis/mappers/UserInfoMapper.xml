    <sql id="Base_Column_List">
        *
    </sql>
    <select id="queryById" resultType="UserInfo"
            parameterType="java.lang.Integer">
        select
        *
        from users
        where id = #{id}
    </select>

    <select id="queryAll" resultType="UserInfo">
        select * from users
    </select>

    <select id="validateUser" resultType="UserInfo">
        select * from users where username=#{username} and password=#{password}
    </select>

    <insert id="add" parameterType="UserInfo" useGeneratedKeys="true" keyProperty="id">
      insert into users(username,password,role) VALUES (#{username},#{password},#{role})
    </insert>

    <update id="update" parameterType="UserInfo">
        update users set username=#{username},password=#{password},role=#{role} where id=#{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from users where id=#{id}
    </delete>
</mapper>